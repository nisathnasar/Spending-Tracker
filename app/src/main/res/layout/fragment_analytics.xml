<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:text="Latest Week Spending"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"

                        style="@style/word_title"
                        android:textSize="15sp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/weekly_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"

                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:text="Spending by Category"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"

                        style="@style/word_title"
                        android:textSize="15sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp"
                        tools:context=".fragments.AnalyticsFragment">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_chart"
                                android:layout_width="match_parent"
                                android:layout_height="550dp"

                                />

                        </RelativeLayout>

                    </FrameLayout>


                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:checked="false"
                        android:id="@+id/labels_toggle"
                        android:text="Show labels on the chart"
                        />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        android:checked="false"
                        android:id="@+id/percentage_toggle_spending_by_category"
                        android:text="Show percentage values"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:text="Income by Category"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"

                        style="@style/word_title"
                        android:textSize="15sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp"
                        tools:context=".fragments.AnalyticsFragment">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_chart_income_sources"
                                android:layout_width="match_parent"
                                android:layout_height="550dp"

                                />

                        </RelativeLayout>

                    </FrameLayout>


                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:checked="false"
                        android:id="@+id/labels_toggle_income_sources"
                        android:text="Show labels on the chart"
                        />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        android:checked="false"
                        android:id="@+id/percentage_toggle_income_sources"
                        android:text="Show percentage values"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="30dp"
                        android:text="Overview of all your transactions:"
                        android:layout_gravity="center"
                        style="@style/word_title"
                        android:textSize="15sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="50dp"
                        tools:context=".fragments.AnalyticsFragment">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/chart1"
                                android:layout_width="match_parent"
                                android:layout_height="500dp"

                                />

                        </RelativeLayout>

                    </FrameLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>






        </LinearLayout>




    </ScrollView>
</LinearLayout>



