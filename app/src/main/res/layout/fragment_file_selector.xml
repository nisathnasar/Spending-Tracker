<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"

    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.FileSelectorFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="You can upload your bank statement in this page. Please note:\n
        \n1 App only supports PDF.
        \n2 Never upload same statement more than once.
        \n3 The current version only supports HSBC.
        \n\nSteps: \n
        \n1 Click 'Browse'
        \n2 Find your statement in your device.
        \n3 Click 'Submit File'"
                    />
            </com.google.android.material.card.MaterialCardView>




            <TextView
                android:id="@+id/editText_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:text="No File Selected"
                android:inputType="textUri" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Browse" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your bank:"
                    android:layout_weight="0.5"
                    android:textSize="15sp"/>

                <Spinner
                    android:id="@+id/bank_group_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_weight="0.5"
                    />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_submit_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/strip_text"
                />

        </LinearLayout>
    </ScrollView>




</LinearLayout>